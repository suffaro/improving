/**
 * 8-way demultiplexor:
 * [a, b, c, d, e, f, g, h] = [in, 0,  0,  0,  0,  0,  0,  0] if sel = 000
 *                            [0, in,  0,  0,  0,  0,  0,  0] if sel = 001
 *                            [0,  0, in,  0,  0,  0,  0,  0] if sel = 010
 *                            [0,  0,  0, in,  0,  0,  0,  0] if sel = 011
 *                            [0,  0,  0,  0, in,  0,  0,  0] if sel = 100
 *                            [0,  0,  0,  0,  0, in,  0,  0] if sel = 101
 *                            [0,  0,  0,  0,  0,  0, in,  0] if sel = 110
 *                            [0,  0,  0,  0,  0,  0,  0, in] if sel = 111
 */
CHIP DMux8Way {
    IN in, sel[3];
    OUT a, b, c, d, e, f, g, h;

    PARTS:
    DMux(in=in, sel=sel[2], a=leftHalf, b=rightHalf);

    DMux(in=leftHalf, sel=sel[1], a=leftTop, b=leftBottom);
    DMux(in=rightHalf, sel=sel[1], a=rightTop, b=rightBottom);

    DMux(in=leftTop, sel=sel[0], a=a, b=b);
    DMux(in=leftBottom, sel=sel[0], a=c, b=d);
    DMux(in=rightTop, sel=sel[0], a=e, b=f);
    DMux(in=rightBottom, sel=sel[0], a=g, b=h);


}
